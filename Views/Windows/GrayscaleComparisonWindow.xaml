<Window x:Class="MiniPhotoshop.Views.Windows.GrayscaleComparisonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Perbandingan Metode Grayscale"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Perbandingan: Average vs Luminance Grayscale"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Average Method -->
            <Border Grid.Column="0"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Average Method"
                                   FontSize="14"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Formula: (R + G + B) / 3"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Image x:Name="AverageImage"
                               Stretch="None"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Luminance Method -->
            <Border Grid.Column="2"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Luminance Method"
                                   FontSize="14"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Formula: 0.299×R + 0.587×G + 0.114×B"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Image x:Name="LuminanceImage"
                               Stretch="None"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
