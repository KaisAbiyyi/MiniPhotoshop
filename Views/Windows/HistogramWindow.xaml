<Window x:Class="MiniPhotoshop.Views.Windows.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histogram Detail"
        Height="450"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock x:Name="TitleText"
                   Text="Histogram - Red Channel"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,15"/>
        
        <!-- Histogram Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Y-Axis Labels -->
            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" Margin="0,0,8,0">
                <TextBlock x:Name="MaxLabel" Text="1000" FontSize="9" HorizontalAlignment="Right" Foreground="{StaticResource TextBrush}"/>
                <TextBlock x:Name="MidLabel" Text="500" FontSize="9" HorizontalAlignment="Right" Margin="0,80,0,0" Foreground="{StaticResource TextBrush}"/>
                <TextBlock Text="0" FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="{StaticResource TextBrush}"/>
            </StackPanel>
            
            <!-- Histogram Canvas -->
            <Border Grid.Row="0" Grid.Column="1" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    Background="{StaticResource SurfaceBrush}"
                    ClipToBounds="True">
                <Canvas x:Name="HistogramCanvas" ClipToBounds="True"/>
            </Border>
            
            <!-- X-Axis Labels -->
            <Grid Grid.Row="1" Grid.Column="1"
                  Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="0" FontSize="9" HorizontalAlignment="Left" Foreground="{StaticResource TextBrush}"/>
                <TextBlock Grid.Column="1" Text="64" FontSize="9" HorizontalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                <TextBlock Grid.Column="2" Text="128" FontSize="9" HorizontalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                <TextBlock Grid.Column="3" Text="192" FontSize="9" HorizontalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                <TextBlock Grid.Column="4" Text="255" FontSize="9" HorizontalAlignment="Right" Foreground="{StaticResource TextBrush}"/>
            </Grid>
            
            <!-- Axis Title -->
            <TextBlock Grid.Row="1" Grid.Column="1"
                       Text="Intensitas (0-255)"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       Foreground="{StaticResource TextBrush}"/>
        </Grid>
        
        <!-- Info -->
        <TextBlock x:Name="InfoText"
                   Grid.Row="2"
                   Text="Total pixels: 0"
                   FontSize="11"
                   Foreground="{StaticResource TextBrush}"
                   Opacity="0.7"
                   Margin="0,15,0,0"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
