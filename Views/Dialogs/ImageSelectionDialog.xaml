<Window x:Class="MiniPhotoshop.Views.Dialogs.ImageSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pilih Tipe Gambar"
        Height="350"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   Text="Pilih Tipe Gambar"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,10"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   x:Name="DescriptionText"
                   Text="Pilih bagaimana Anda ingin menggunakan gambar yang di-drop:"
                   FontSize="12"
                   Foreground="{StaticResource TextBrush}"
                   Opacity="0.7"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <!-- Options -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <Border Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,12">
                <RadioButton x:Name="SetImageARadio"
                             GroupName="ImageChoice"
                             IsChecked="True"
                             Cursor="Hand">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Gambar A (Gambar Utama)"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Gambar yang akan diproses dan ditampilkan sebagai gambar utama"
                                   FontSize="12"
                                   Foreground="{StaticResource TextBrush}"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>
            </Border>
            
            <Border Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="15">
                <RadioButton x:Name="SetImageBRadio"
                             GroupName="ImageChoice"
                             Cursor="Hand">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Gambar B (Untuk Operasi)"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Gambar yang akan digunakan untuk operasi aritmatika dan biner"
                                   FontSize="12"
                                   Foreground="{StaticResource TextBrush}"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </RadioButton>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Batal"
                    Click="CancelButton_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    MinWidth="80"
                    Background="Transparent"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="OK"
                    Click="OkButton_Click"
                    Padding="20,8"
                    MinWidth="80"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
