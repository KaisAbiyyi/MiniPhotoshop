<Window x:Class="MiniPhotoshop.Views.Dialogs.WatermarkExtractDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ekstrak Watermark"
        Height="360"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackgroundBrush}"
        SizeToContent="Height">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Informasi Watermark"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,12"/>

            <TextBlock x:Name="WatermarkTypeText"
                       Text="Tipe: -"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,8"/>

            <StackPanel x:Name="TextPanel" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="Teks:" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="WatermarkTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Height="80"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,8"/>
            </StackPanel>

            <StackPanel x:Name="ImagePanel" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="Logo:" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="6">
                    <Image x:Name="WatermarkImage"
                           Height="120"
                           Stretch="Uniform"/>
                </Border>
            </StackPanel>

            <TextBlock x:Name="WatermarkOpacityText"
                       Text="Opacity: -"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,4"/>
            <TextBlock x:Name="WatermarkSizeText"
                       Text="Ukuran: -"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,4"/>
            <TextBlock x:Name="WatermarkPositionText"
                       Text="Posisi: -"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,16"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Tutup"
                        Click="Close_Click"
                        Padding="20,8"
                        MinWidth="80"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        BorderBrush="{StaticResource AccentBrush}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
