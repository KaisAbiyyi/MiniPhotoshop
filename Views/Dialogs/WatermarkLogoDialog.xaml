<Window x:Class="MiniPhotoshop.Views.Dialogs.WatermarkLogoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Watermark Logo"
        Height="340"
        Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackgroundBrush}"
        SizeToContent="Height">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Watermark Logo"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,12"/>

            <TextBlock Text="File Logo:"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,6"/>
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="LogoPathBox"
                         Grid.Column="0"
                         IsReadOnly="True"
                         Padding="8"
                         FontSize="12"
                         Margin="0,0,8,0"/>
                <Button Grid.Column="1"
                        Content="Browse..."
                        Click="Browse_Click"
                        Padding="12,6"/>
            </Grid>

            <TextBlock Text="Opacity:"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,6"/>
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="OpacitySlider"
                        Grid.Column="0"
                        Minimum="0"
                        Maximum="100"
                        Value="30"
                        TickFrequency="5"
                        Margin="0,0,8,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat='{}{0:0}%'}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           MinWidth="40"
                           TextAlignment="Right"/>
            </Grid>

            <TextBlock Text="Scale (% of base width):"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="ScaleBox"
                     Text="20"
                     Padding="8"
                     FontSize="14"
                     Margin="0,0,0,12"/>

            <TextBlock Text="Posisi:"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,6"/>
            <ComboBox x:Name="PositionCombo"
                      SelectedIndex="3"
                      Margin="0,0,0,16">
                <ComboBoxItem Content="Top Left" Tag="TopLeft"/>
                <ComboBoxItem Content="Top Right" Tag="TopRight"/>
                <ComboBoxItem Content="Bottom Left" Tag="BottomLeft"/>
                <ComboBoxItem Content="Bottom Right" Tag="BottomRight"/>
                <ComboBoxItem Content="Center" Tag="Center"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Batal"
                        Click="Cancel_Click"
                        Padding="20,8"
                        Margin="0,0,10,0"
                        MinWidth="80"
                        Background="{StaticResource SurfaceBrush}"
                        Foreground="{StaticResource TextBrush}"/>
                <Button Content="Terapkan"
                        Click="Apply_Click"
                        Padding="20,8"
                        MinWidth="80"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        BorderBrush="{StaticResource AccentBrush}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
