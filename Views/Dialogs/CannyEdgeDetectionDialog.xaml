<Window x:Class="MiniPhotoshop.Views.Dialogs.CannyEdgeDetectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Canny Edge Detection"
        Width="380"
        Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30"
        WindowStyle="ToolWindow">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Canny Edge Detection Parameters" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>
        
        <!-- Low Threshold -->
        <Grid Grid.Row="1" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Low Threshold:" VerticalAlignment="Center"/>
            <Slider x:Name="LowThresholdSlider" 
                    Grid.Column="1" 
                    Minimum="1" 
                    Maximum="255" 
                    Value="50"
                    VerticalAlignment="Center"
                    ValueChanged="LowThresholdSlider_ValueChanged"/>
            <TextBlock x:Name="LowThresholdValue" 
                       Grid.Column="2" 
                       Text="50" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- High Threshold -->
        <Grid Grid.Row="2" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="High Threshold:" VerticalAlignment="Center"/>
            <Slider x:Name="HighThresholdSlider" 
                    Grid.Column="1" 
                    Minimum="1" 
                    Maximum="255" 
                    Value="150"
                    VerticalAlignment="Center"
                    ValueChanged="HighThresholdSlider_ValueChanged"/>
            <TextBlock x:Name="HighThresholdValue" 
                       Grid.Column="2" 
                       Text="150" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- Gaussian Kernel Size -->
        <Grid Grid.Row="3" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Gaussian Kernel Size:" VerticalAlignment="Center"/>
            <Slider x:Name="KernelSizeSlider" 
                    Grid.Column="1" 
                    Minimum="3" 
                    Maximum="9" 
                    Value="5"
                    TickFrequency="2"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"
                    ValueChanged="KernelSizeSlider_ValueChanged"/>
            <TextBlock x:Name="KernelSizeValue" 
                       Grid.Column="2" 
                       Text="5" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- Sigma -->
        <Grid Grid.Row="4" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Sigma (σ):" VerticalAlignment="Center"/>
            <Slider x:Name="SigmaSlider" 
                    Grid.Column="1" 
                    Minimum="0.5" 
                    Maximum="5.0" 
                    Value="1.4"
                    TickFrequency="0.1"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"
                    ValueChanged="SigmaSlider_ValueChanged"/>
            <TextBlock x:Name="SigmaValue" 
                       Grid.Column="2" 
                       Text="1.4" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </Grid>
        
        <!-- Description -->
        <StackPanel Grid.Row="5" Margin="0,15,0,0">
            <TextBlock Text="• Low Threshold: Batas bawah untuk weak edge" 
                       FontSize="11" 
                       Foreground="#AAAAAA"/>
            <TextBlock Text="• High Threshold: Batas atas untuk strong edge" 
                       FontSize="11" 
                       Foreground="#AAAAAA"/>
            <TextBlock Text="• Gaussian Kernel: Ukuran blur (harus ganjil)" 
                       FontSize="11" 
                       Foreground="#AAAAAA"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="ApplyButton" 
                    Content="Apply" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ApplyButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Background="#3E3E42"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
