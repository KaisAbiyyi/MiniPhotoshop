<Window x:Class="MiniPhotoshop.Views.Dialogs.ScalarOperationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operasi Skalar"
        Height="280"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackgroundBrush}"
        SizeToContent="Height">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Operasi Skalar pada Citra"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Pilih Operasi:"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,8"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <RadioButton x:Name="MultiplyRadio"
                             Content="Kali (A ร c)"
                             IsChecked="True"
                             Margin="0,0,20,0"
                             VerticalAlignment="Center"
                             Foreground="{StaticResource TextBrush}"/>
                <RadioButton x:Name="DivideRadio"
                             Content="Bagi (A รท c)"
                             VerticalAlignment="Center"
                             Foreground="{StaticResource TextBrush}"/>
            </StackPanel>
            
            <TextBlock Text="Nilai Skalar (c):"
                       FontSize="12"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,8"/>
            
            <TextBox x:Name="ScalarValueBox"
                     Text="2"
                     Padding="8"
                     FontSize="14"
                     Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Batal"
                        Click="Cancel_Click"
                        Padding="20,8"
                        Margin="0,0,10,0"
                        MinWidth="80"
                        Background="{StaticResource SurfaceBrush}"
                        Foreground="{StaticResource TextBrush}"/>
                <Button Content="Terapkan"
                        Click="Apply_Click"
                        Padding="20,8"
                        MinWidth="80"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        BorderBrush="{StaticResource AccentBrush}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
