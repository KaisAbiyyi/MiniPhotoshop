<Window x:Class="MiniPhotoshop.Views.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Photoshop"
        Height="600"
        Width="900"
        MinHeight="450"
        MinWidth="700"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver"
        DragLeave="Window_DragLeave">
    <Window.Resources>
        <!-- Style untuk Toggle Button di Toolbar -->
        <Style x:Key="ToolbarToggleStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="#FF35424E"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE8F0FE"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#FFAAAAAA"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="#FF1A56B3"/>
                    <Setter Property="Background" Value="#FFD6E4FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar Utama -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,12"
                   LastChildFill="False">
            <Border Background="#FFF8FAFC"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="2"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <!-- File Menu -->
                    <Menu Background="Transparent"
                          BorderThickness="0"
                          Margin="0"
                          VerticalAlignment="Center"
                          FontSize="14">
                        <MenuItem Header="_File"
                                  Padding="16,6">
                            <MenuItem Header="Buka Gambar..."
                                      Click="SelectImageButton_Click"/>
                            <MenuItem Header="Tambah Gambar B..."
                                      Click="AddImageB_Click"
                                      x:Name="AddImageBMenuItem"/>
                            <Separator/>
                            <MenuItem Header="Pengaturan Kanvas..."
                                      Click="OpenCanvasSettingsDialog_Click"/>
                            <Separator/>
                            <MenuItem x:Name="ResetImageMenuItem"
                                      Header="Reset Gambar"
                                      Click="ResetImage_Click"
                                      IsEnabled="False"/>
                            <Separator/>
                            <MenuItem x:Name="SavePixelsMenuItem"
                                      Header="Simpan Pixel"
                                      Click="SavePixelsButton_Click"
                                      IsEnabled="False"/>
                        </MenuItem>
                    </Menu>
                    
                    <!-- Toggle Brightness -->
                    <ToggleButton x:Name="BrightnessToggle"
                                  Content="Brightness"
                                  Checked="BrightnessToggle_Checked"
                                  Unchecked="BrightnessToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Toggle Binary Threshold -->
                    <ToggleButton x:Name="BinaryThresholdToggle"
                                  Content="Binary Threshold"
                                  Checked="BinaryThresholdToggle_Checked"
                                  Unchecked="BinaryThresholdToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Grayscale Comparison -->
                    <Button x:Name="GrayscaleCompareButton"
                            Content="Grayscale Comparison"
                            Click="ShowGrayscaleComparison_Click"
                            IsEnabled="False"
                            Padding="16,6"
                            Margin="4,0,0,0"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#FF35424E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE8F0FE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Operasi Aritmatika -->
                    <ToggleButton x:Name="ArithmeticAddToggle"
                                  Content="A + B"
                                  Checked="ArithmeticAddToggle_Checked"
                                  Unchecked="ArithmeticAddToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <ToggleButton x:Name="ArithmeticSubtractToggle"
                                  Content="A - B"
                                  Checked="ArithmeticSubtractToggle_Checked"
                                  Unchecked="ArithmeticSubtractToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <ToggleButton x:Name="ArithmeticMultiplyToggle"
                                  Content="A × B"
                                  Checked="ArithmeticMultiplyToggle_Checked"
                                  Unchecked="ArithmeticMultiplyToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <ToggleButton x:Name="ArithmeticDivideToggle"
                                  Content="A ÷ B"
                                  Checked="ArithmeticDivideToggle_Checked"
                                  Unchecked="ArithmeticDivideToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <!-- Operasi Skalar -->
                    <ToggleButton x:Name="ScalarOperationToggle"
                                  Content="Operasi Skalar"
                                  Checked="ScalarOperationToggle_Checked"
                                  Unchecked="ScalarOperationToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Operasi Biner - 4 Toggle Terpisah -->
                    <ToggleButton x:Name="BinaryAndToggle"
                                  Content="AND"
                                  Checked="BinaryAndToggle_Checked"
                                  Unchecked="BinaryAndToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="BinaryToggle_RightClick"/>
                    
                    <ToggleButton x:Name="BinaryOrToggle"
                                  Content="OR"
                                  Checked="BinaryOrToggle_Checked"
                                  Unchecked="BinaryOrToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="BinaryToggle_RightClick"/>
                    
                    <ToggleButton x:Name="BinaryNotToggle"
                                  Content="NOT"
                                  Checked="BinaryNotToggle_Checked"
                                  Unchecked="BinaryNotToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <ToggleButton x:Name="BinaryXorToggle"
                                  Content="XOR"
                                  Checked="BinaryXorToggle_Checked"
                                  Unchecked="BinaryXorToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="BinaryToggle_RightClick"/>
                    
                    <!-- Color Selection Toggle -->
                    <ToggleButton x:Name="ColorSelectionToggle"
                                  Content="Seleksi Warna"
                                  Checked="ColorSelectionToggle_Checked"
                                  Unchecked="ColorSelectionToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Button Rotasi -->
                    <Button x:Name="RotateButton"
                            Content="Rotasi"
                            Click="RotateButton_Click"
                            IsEnabled="False"
                            Padding="16,6"
                            Margin="4,0,0,0"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#FF35424E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE8F0FE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Button Distorsi -->
                    <Button x:Name="DistortionButton"
                            Content="Distorsi"
                            Click="DistortionButton_Click"
                            IsEnabled="False"
                            Padding="16,6"
                            Margin="4,0,0,0"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#FF35424E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE8F0FE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Convolution Menu -->
                    <Menu Background="Transparent"
                          BorderThickness="0"
                          Margin="4,0,0,0"
                          VerticalAlignment="Center"
                          FontSize="14"
                          x:Name="ConvolutionMenu"
                          IsEnabled="False">
                        <MenuItem Header="Konvolusi"
                                  Padding="16,6">
                            <MenuItem Header="Low Pass Filter">
                                <MenuItem Header="3x3" Tag="3" Click="ConvolutionLowPass_Click"/>
                                <MenuItem Header="5x5" Tag="5" Click="ConvolutionLowPass_Click"/>
                                <MenuItem Header="7x7" Tag="7" Click="ConvolutionLowPass_Click"/>
                            </MenuItem>
                            <MenuItem Header="High Pass Filter" Click="ConvolutionHighPass_Click"/>
                            <Separator/>
                            <MenuItem Header="Gaussian Blur">
                                <MenuItem Header="3x3" Tag="3" Click="ConvolutionGaussianBlur_Click"/>
                                <MenuItem Header="5x5" Tag="5" Click="ConvolutionGaussianBlur_Click"/>
                                <MenuItem Header="7x7" Tag="7" Click="ConvolutionGaussianBlur_Click"/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Edge Detection">
                                <MenuItem Header="Sobel Horizontal" Click="ConvolutionSobelH_Click"/>
                                <MenuItem Header="Sobel Vertical" Click="ConvolutionSobelV_Click"/>
                                <MenuItem Header="Laplacian" Click="ConvolutionLaplacian_Click"/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Emboss" Click="ConvolutionEmboss_Click"/>
                            <Separator/>
                            <MenuItem Header="Custom Kernel..." Click="ConvolutionCustom_Click"/>
                        </MenuItem>
                    </Menu>
                    
                    <!-- Move Image Toggle -->
                    <ToggleButton x:Name="MoveImageToggle"
                                  Content="Pindah Gambar"
                                  Checked="MoveImageToggle_Checked"
                                  Unchecked="MoveImageToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Selection Tools Separator (Hidden temporarily) -->
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,4" Visibility="Collapsed"/>
                    
                    <!-- Rectangle Selection Toggle (Hidden temporarily) -->
                    <ToggleButton x:Name="RectangleSelectToggle"
                                  Content="Seleksi Kotak"
                                  Checked="RectangleSelectToggle_Checked"
                                  Unchecked="RectangleSelectToggle_Unchecked"
                                  IsEnabled="False"
                                  Visibility="Collapsed"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Lasso Selection Toggle (Hidden temporarily) -->
                    <ToggleButton x:Name="LassoSelectToggle"
                                  Content="Seleksi Bebas"
                                  Checked="LassoSelectToggle_Checked"
                                  Unchecked="LassoSelectToggle_Unchecked"
                                  IsEnabled="False"
                                  Visibility="Collapsed"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Move Selection Toggle (Hidden temporarily) -->
                    <ToggleButton x:Name="MoveSelectionToggle"
                                  Content="Pindah Seleksi"
                                  Checked="MoveSelectionToggle_Checked"
                                  Unchecked="MoveSelectionToggle_Unchecked"
                                  IsEnabled="False"
                                  Visibility="Collapsed"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Apply Selection Button (Hidden temporarily) -->
                    <Button x:Name="ApplySelectionButton"
                            Content="Terapkan"
                            Click="ApplySelectionMove_Click"
                            IsEnabled="False"
                            Visibility="Collapsed"
                            Padding="12,6"
                            Margin="4,0,0,0"
                            FontSize="14"
                            Background="#FF4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Clear Selection Button (Hidden temporarily) -->
                    <Button x:Name="ClearSelectionButton"
                            Content="Hapus Seleksi"
                            Click="ClearSelection_Click"
                            IsEnabled="False"
                            Visibility="Collapsed"
                            Padding="12,6"
                            Margin="4,0,0,0"
                            FontSize="14"
                            Background="#FFF44336"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </DockPanel>

        <!-- Info Panel -->
        <Border Grid.Row="1"
                Padding="12"
                BorderBrush="#FFDFE2E5"
                BorderThickness="1"
                CornerRadius="6"
                Background="#FFF8FAFC">
            <StackPanel Orientation="Vertical">
                <TextBlock Name="FileNameText"
                           Text="Belum ada gambar dipilih"
                           FontSize="14"
                           FontStyle="Italic"
                           Foreground="Gray"/>
                <TextBlock Name="ImageInfoText"
                           Text="Pilih gambar untuk melihat detail dan menyimpan data pixel."
                           FontSize="12"
                           Foreground="#FF51606A"
                           Margin="0,4,0,0"/>
                
                <!-- Brightness Slider -->
                <StackPanel x:Name="BrightnessPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Brightness Adjustment (-255 to +255)" FontSize="12" FontWeight="Bold" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="BrightnessSlider" 
                                Grid.Column="0"
                                Minimum="-255" 
                                Maximum="255" 
                                Value="0" 
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                ValueChanged="BrightnessSlider_ValueChanged"
                                Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ElementName=BrightnessSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"
                                   MinWidth="40"
                                   TextAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <!-- Binary Threshold Slider -->
                <StackPanel x:Name="BinaryThresholdPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Binary Threshold (0 - 255)" FontSize="12" FontWeight="Bold" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="BinaryThresholdSlider"
                                Grid.Column="0"
                                Minimum="0"
                                Maximum="255"
                                Value="128"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="BinaryThresholdSlider_ValueChanged"
                                Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ElementName=BinaryThresholdSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   MinWidth="40"
                                   TextAlignment="Right"/>
                    </Grid>
                </StackPanel>
                
                <!-- Color Selection Panel - Now Simplified -->
                <StackPanel x:Name="ColorSelectionPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Seleksi Warna Interaktif" FontSize="12" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBlock x:Name="SelectedColorText" 
                               Text="Klik pada gambar untuk memilih warna" 
                               FontSize="11" 
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Rotation Panel -->
                <StackPanel x:Name="RotationPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Rotasi Citra" FontSize="12" FontWeight="Bold" Margin="0,0,0,6"/>
                    
                    <!-- Preset Rotations -->
                    <WrapPanel Margin="0,0,0,8">
                        <Button x:Name="Rotate45Button"
                                Content="45°"
                                Click="Rotate45Button_Click"
                                Padding="12,4"
                                MinWidth="60"
                                Margin="0,0,4,4"/>
                        <Button x:Name="Rotate90Button"
                                Content="90°"
                                Click="Rotate90Button_Click"
                                Padding="12,4"
                                MinWidth="60"
                                Margin="0,0,4,4"/>
                        <Button x:Name="Rotate180Button"
                                Content="180°"
                                Click="Rotate180Button_Click"
                                Padding="12,4"
                                MinWidth="60"
                                Margin="0,0,4,4"/>
                        <Button x:Name="Rotate270Button"
                                Content="270°"
                                Click="Rotate270Button_Click"
                                Padding="12,4"
                                MinWidth="60"
                                Margin="0,0,0,4"/>
                    </WrapPanel>
                    
                    <!-- Fine Control: ±1° -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Fine Control:" 
                                   FontSize="11" 
                                   VerticalAlignment="Center" 
                                   MinWidth="110"
                                   Margin="0,0,8,0"/>
                        <Button x:Name="RotateLeft1Button"
                                Content="← 1°"
                                Click="RotateLeft1Button_Click"
                                Padding="8,4"
                                MinWidth="50"
                                Margin="0,0,4,0"
                                ToolTip="Putar kiri 1°"/>
                        <Button x:Name="RotateRight1Button"
                                Content="1° →"
                                Click="RotateRight1Button_Click"
                                Padding="8,4"
                                MinWidth="50"
                                ToolTip="Putar kanan 1°"/>
                    </StackPanel>
                    
                    <!-- Custom Rotation Input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Input Nilai Rotasi:" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"
                                   MinWidth="110"
                                   Margin="0,0,8,0"/>
                        <TextBox x:Name="CustomRotationInput"
                                 Width="60"
                                 Padding="6,4"
                                 FontSize="12"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Masukkan sudut rotasi (0-360°)"
                                 Margin="0,0,4,0"
                                 PreviewTextInput="CustomRotationInput_PreviewTextInput"
                                 Text="0"/>
                        <Button x:Name="ApplyCustomRotationButton"
                                Content="Rotasi"
                                Click="ApplyCustomRotationButton_Click"
                                Padding="12,4"
                                MinWidth="70"
                                ToolTip="Terapkan rotasi sesuai input"/>
                    </StackPanel>
                    
                    <!-- Restore Button -->
                    <Button x:Name="RestoreRotationButton"
                            Content="Kembalikan ke Asli"
                            Click="RestoreRotationButton_Click"
                            Padding="10,4"
                            HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Distortion Panel -->
                <StackPanel x:Name="DistortionPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Distorsi Citra" FontSize="12" FontWeight="Bold" Margin="0,0,0,6"/>
                    
                    <!-- Level Slider -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Level Distorsi:" 
                                   FontSize="11" 
                                   VerticalAlignment="Center" 
                                   MinWidth="100"
                                   Margin="0,0,8,0"/>
                        <Slider x:Name="DistortionSlider"
                                Minimum="1"
                                Maximum="50"
                                Value="5"
                                Width="120"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="DistortionSlider_ValueChanged"
                                ToolTip="Semakin tinggi level, semakin besar distorsi"/>
                        <TextBlock Text="{Binding ElementName=DistortionSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"
                                   MinWidth="30"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Apply and Restore Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <Button x:Name="ApplyDistortionButton"
                                Content="Terapkan Distorsi"
                                Click="ApplyDistortionButton_Click"
                                Padding="12,4"
                                MinWidth="120"
                                Margin="0,0,8,0"/>
                        <Button x:Name="RestoreDistortionButton"
                                Content="Kembalikan ke Asli"
                                Click="RestoreDistortionButton_Click"
                                Padding="10,4"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2"
              Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Main Display Area -->
            <Border x:Name="DisplayImageBorder"
                    Grid.Column="0"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Padding="12"
                    SnapsToDevicePixels="True">
                <Grid>
                    <ScrollViewer x:Name="WorkspaceScrollViewer"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  PanningMode="Both"
                                  Focusable="True"
                                  PreviewMouseWheel="WorkspaceScrollViewer_PreviewMouseWheel">
                        <Grid Background="Transparent">
                            <Image Name="DisplayImage"
                                   Stretch="None"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   IsManipulationEnabled="True"
                                   ManipulationStarting="DisplayImage_ManipulationStarting"
                                   ManipulationDelta="DisplayImage_ManipulationDelta">
                                <Image.RenderTransform>
                                    <ScaleTransform x:Name="ImageScaleTransform"
                                                    ScaleX="1"
                                                    ScaleY="1"/>
                                </Image.RenderTransform>
                            </Image>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Hidden Negation Toggle for programmatic control -->
            <ToggleButton x:Name="NegationToggle"
                          Visibility="Collapsed"
                          Checked="NegationToggle_Checked"
                          Unchecked="NegationToggle_Unchecked"
                          IsEnabled="False"/>

            <!-- Sidebar Kanan - TabControl untuk Histogram dan Filter -->
            <Border x:Name="SidebarPanel"
                    Grid.Column="1"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Margin="12,0,0,0"
                    Visibility="Collapsed">
                <TabControl x:Name="SidebarTabControl" 
                            BorderThickness="0"
                            Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="Foreground" Value="#FF51606A"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="#FFDFE2E5"
                                                BorderThickness="0,0,0,2"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF4C8BF5"/>
                                                <Setter Property="Foreground" Value="#FF4C8BF5"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FFF8FAFC"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Tab Histogram -->
                    <TabItem Header="Histogram">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                            <StackPanel>
                                <!-- Preview Gambar B -->
                                <Border x:Name="ImageBPreviewBorder"
                                        BorderBrush="#FFDFE2E5"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="8"
                                        Margin="0,0,0,20"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="Gambar B"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,8"/>
                                        <Image x:Name="ImageBPreview"
                                               MaxHeight="150"
                                               Stretch="Uniform"
                                               HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="ImageBInfoText"
                                                   Text=""
                                                   FontSize="10"
                                                   Foreground="#FF51606A"
                                                   TextAlignment="Center"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Red -->
                                <TextBlock Text="Red" FontSize="11" Foreground="#E74C3C" Margin="0,0,0,4"/>
                                <Canvas x:Name="HistogramRed" 
                                        Height="80" 
                                        Background="#FFF5F5F5" 
                                        Margin="0,0,0,16"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="HistogramRed_Click"/>
                                
                                <!-- Green -->
                                <TextBlock Text="Green" FontSize="11" Foreground="#27AE60" Margin="0,0,0,4"/>
                                <Canvas x:Name="HistogramGreen" 
                                        Height="80" 
                                        Background="#FFF5F5F5" 
                                        Margin="0,0,0,16"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="HistogramGreen_Click"/>
                                
                                <!-- Blue -->
                                <TextBlock Text="Blue" FontSize="11" Foreground="#3498DB" Margin="0,0,0,4"/>
                                <Canvas x:Name="HistogramBlue" 
                                        Height="80" 
                                        Background="#FFF5F5F5" 
                                        Margin="0,0,0,16"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="HistogramBlue_Click"/>
                                
                                <!-- Grayscale -->
                                <TextBlock Text="Grayscale" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4"/>
                                <Canvas x:Name="HistogramGray" 
                                        Height="80" 
                                        Background="#FFF5F5F5" 
                                        Margin="0,0,0,0"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="HistogramGray_Click"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    
                    <!-- Tab Filter -->
                    <TabItem Header="Filter">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                            <StackPanel>
                                <!-- Filter Previews with Images -->
                                <ItemsControl x:Name="FilterPreviewList">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="8"
                                                    BorderThickness="2"
                                                    Padding="4"
                                                    Margin="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                        <Setter Property="Background" Value="White"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="BorderBrush" Value="#FF4C8BF5"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Button Click="FilterPreview_Click"
                                                        CommandParameter="{Binding Mode}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="4"
                                                        Cursor="Hand">
                                                    <StackPanel Width="110">
                                                        <Image Source="{Binding PreviewSource}"
                                                               Width="110"
                                                               Height="72"
                                                               Stretch="UniformToFill"
                                                               SnapsToDevicePixels="True"
                                                               Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding Title}"
                                                                   FontSize="11"
                                                                   Foreground="#FF35424E"
                                                                   HorizontalAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   TextAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Negasi Toggle Button -->
                                <Border BorderBrush="#FFDFE2E5" 
                                        BorderThickness="0,1,0,0" 
                                        Padding="8"
                                        Margin="0,12,0,0">
                                    <Button x:Name="NegationButton"
                                            Content="Negasi Citra"
                                            Click="NegationButton_Click"
                                            IsEnabled="False"
                                            Padding="12,8"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Cursor="Hand"
                                            HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FFF8FAFC"/>
                                                <Setter Property="Foreground" Value="#FF35424E"/>
                                                <Setter Property="BorderBrush" Value="#FFDFE2E5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFE8F0FE"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
