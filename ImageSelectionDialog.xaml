<Window x:Class="MiniPhotoshop.ImageSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pilih Tipe Gambar"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF8FAFC">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Gambar A sudah ada!"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#FF35424E"
                   Margin="0,0,0,10"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="Pilih bagaimana Anda ingin menggunakan gambar yang di-drop:"
                   FontSize="12"
                   Foreground="#FF51606A"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <!-- Options -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <RadioButton x:Name="ReplaceImageARadio"
                         Content="Ganti Gambar A (mengganti gambar utama)"
                         GroupName="ImageChoice"
                         IsChecked="True"
                         FontSize="13"
                         Margin="0,0,0,10"
                         Foreground="#FF35424E"/>
            <RadioButton x:Name="SetImageBRadio"
                         Content="Set sebagai Gambar B (untuk operasi aritmatika/biner)"
                         GroupName="ImageChoice"
                         FontSize="13"
                         Foreground="#FF35424E"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Batal"
                    Click="CancelButton_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    MinWidth="80"
                    Background="Transparent"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#FF35424E"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="OK"
                    Click="OkButton_Click"
                    Padding="20,8"
                    MinWidth="80"
                    Background="#FF4C8BF5"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A7BE0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
