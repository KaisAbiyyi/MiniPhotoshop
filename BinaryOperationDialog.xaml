<Window x:Class="MiniPhotoshop.BinaryOperationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operasi Biner"
        Height="220"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF8FAFC"
        SizeToContent="Height">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Operasi Citra Biner (Boolean)"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Pilih Operasi:"
                       FontSize="12"
                       Margin="0,0,0,8"/>
            
            <ComboBox x:Name="OperationComboBox"
                      FontSize="14"
                      Padding="8"
                      Margin="0,0,0,20"
                      SelectedIndex="0">
                <ComboBoxItem Content="AND" Tag="And"/>
                <ComboBoxItem Content="OR" Tag="Or"/>
                <ComboBoxItem Content="NOT" Tag="Not"/>
                <ComboBoxItem Content="XOR" Tag="Xor"/>
            </ComboBox>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Batal"
                        Click="Cancel_Click"
                        Padding="20,8"
                        Margin="0,0,10,0"
                        MinWidth="80"/>
                <Button Content="Terapkan"
                        Click="Apply_Click"
                        Padding="20,8"
                        MinWidth="80"
                        Background="#FF4C8BF5"
                        Foreground="White"
                        BorderBrush="#FF4C8BF5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
