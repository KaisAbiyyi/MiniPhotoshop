<Window x:Class="MiniPhotoshop.OffsetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Offset"
        Height="220"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF8FAFC">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Set Offset untuk Operasi"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Offset X:"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBox x:Name="OffsetXBox"
                         Grid.Row="0" Grid.Column="1"
                         Text="0"
                         Padding="8"
                         FontSize="14"
                         Margin="0,0,0,12"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Offset Y:"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBox x:Name="OffsetYBox"
                         Grid.Row="1" Grid.Column="1"
                         Text="0"
                         Padding="8"
                         FontSize="14"
                         Margin="0,0,0,20"/>
            </Grid>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Batal"
                        Click="Cancel_Click"
                        Padding="20,8"
                        Margin="0,0,10,0"
                        MinWidth="80"/>
                <Button Content="OK"
                        Click="OK_Click"
                        Padding="20,8"
                        MinWidth="80"
                        Background="#FF4C8BF5"
                        Foreground="White"
                        BorderBrush="#FF4C8BF5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
