<Window x:Class="MiniPhotoshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Photoshop"
        Height="600"
        Width="900"
        MinHeight="450"
        MinWidth="700">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0"
                   Margin="0,0,0,12"
                   LastChildFill="False">
            <Border Background="#FFF8FAFC"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="2"
                    HorizontalAlignment="Left">
                <Menu Background="Transparent"
                      BorderThickness="0"
                      Margin="0"
                      VerticalAlignment="Center"
                      FontSize="14">
                    <MenuItem Header="_File"
                              Padding="16,6">
                        <MenuItem Header="Buka Gambar..."
                                  Click="SelectImageButton_Click"/>
                        <MenuItem x:Name="SavePixelsMenuItem"
                                  Header="Simpan Pixel"
                                  Click="SavePixelsButton_Click"
                                  IsEnabled="False"/>
                    </MenuItem>
                </Menu>
            </Border>
        </DockPanel>

        <Border Grid.Row="1"
                Padding="12"
                BorderBrush="#FFDFE2E5"
                BorderThickness="1"
                CornerRadius="6"
                Background="#FFF8FAFC">
        <StackPanel Orientation="Vertical">
                <TextBlock Name="FileNameText"
                           Text="Belum ada gambar dipilih"
                           FontSize="14"
                           FontStyle="Italic"
                           Foreground="Gray"/>
                <TextBlock Name="ImageInfoText"
                           Text="Pilih gambar untuk melihat detail dan menyimpan data pixel."
               FontSize="12"
               Foreground="#FF51606A"
               Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2"
              Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Padding="12"
                    SnapsToDevicePixels="True">
                <ScrollViewer x:Name="WorkspaceScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              Focusable="True"
                              PreviewMouseWheel="WorkspaceScrollViewer_PreviewMouseWheel">
                    <Grid Background="Transparent">
                        <Image Name="DisplayImage"
                               Stretch="None"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               IsManipulationEnabled="True"
                               ManipulationStarting="DisplayImage_ManipulationStarting"
                               ManipulationDelta="DisplayImage_ManipulationDelta">
                            <Image.LayoutTransform>
                                <ScaleTransform x:Name="ImageScaleTransform"
                                                ScaleX="1"
                                                ScaleY="1"/>
                            </Image.LayoutTransform>
                        </Image>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,12"
                    Padding="12,10"
                    Background="#F9FBFD"
                    BorderBrush="#FFD0D7DF"
                    BorderThickness="1"
                    CornerRadius="12"
                    Panel.ZIndex="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="0"
                                      Color="#1A000000"
                                      Opacity="0.8"/>
                </Border.Effect>
                <ItemsControl x:Name="FilterPreviewList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="8"
                                    BorderThickness="2"
                                    Padding="2"
                                    Margin="4,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush"
                                                Value="Transparent"/>
                                        <Setter Property="Background"
                                                Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}"
                                                         Value="True">
                                                <Setter Property="BorderBrush"
                                                        Value="#FF4C8BF5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Button Click="FilterPreview_Click"
                                        CommandParameter="{Binding Mode}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8,6"
                                        Cursor="Hand">
                                    <StackPanel Width="110">
                                        <Image Source="{Binding PreviewSource}"
                                               Width="110"
                                               Height="72"
                                               Stretch="UniformToFill"
                                               SnapsToDevicePixels="True"
                                               Margin="0,0,0,6"/>
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="12"
                                                   Foreground="#FF35424E"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Sidebar Kanan - Histogram -->
            <Border x:Name="SidebarPanel"
                    Grid.Column="1"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Margin="12,0,0,0"
                    Padding="16"
                    Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Histogram"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Red -->
                        <TextBlock Text="Red" FontSize="11" Foreground="#E74C3C" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramRed" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,16"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramRed_Click"/>
                        
                        <!-- Green -->
                        <TextBlock Text="Green" FontSize="11" Foreground="#27AE60" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramGreen" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,16"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramGreen_Click"/>
                        
                        <!-- Blue -->
                        <TextBlock Text="Blue" FontSize="11" Foreground="#3498DB" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramBlue" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,16"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramBlue_Click"/>
                        
                        <!-- Grayscale -->
                        <TextBlock Text="Grayscale" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramGray" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,0"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramGray_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
