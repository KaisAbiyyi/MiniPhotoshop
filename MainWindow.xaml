<Window x:Class="MiniPhotoshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Photoshop"
        Height="600"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with file selection button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Name="SelectImageButton" 
                    Content="Pilih Gambar" 
                    Padding="15,5" 
                    FontSize="14"
                    Click="SelectImageButton_Click"/>
            <TextBlock Name="FileNameText" 
                       VerticalAlignment="Center" 
                       Margin="15,0,0,0" 
                       FontStyle="Italic" 
                       Foreground="Gray"
                       Text="Belum ada gambar dipilih"/>
        </StackPanel>
        
        <!-- Image display area -->
        <Border Grid.Row="1" 
                Margin="10" 
                BorderBrush="LightGray" 
                BorderThickness="2" 
                CornerRadius="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto">
                <Image Name="DisplayImage" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
