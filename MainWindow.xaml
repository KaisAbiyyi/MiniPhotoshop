<Window x:Class="MiniPhotoshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Photoshop"
        Height="600"
        Width="900"
        MinHeight="450"
        MinWidth="700"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver"
        DragLeave="Window_DragLeave">
    <Window.Resources>
        <!-- Style untuk Toggle Button di Toolbar -->
        <Style x:Key="ToolbarToggleStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="#FF35424E"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE8F0FE"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#FFAAAAAA"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="#FF1A56B3"/>
                    <Setter Property="Background" Value="#FFD6E4FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar Utama -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,12"
                   LastChildFill="False">
            <Border Background="#FFF8FAFC"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="2"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <!-- File Menu -->
                    <Menu Background="Transparent"
                          BorderThickness="0"
                          Margin="0"
                          VerticalAlignment="Center"
                          FontSize="14">
                        <MenuItem Header="_File"
                                  Padding="16,6">
                            <MenuItem Header="Buka Gambar..."
                                      Click="SelectImageButton_Click"/>
                            <MenuItem Header="Tambah Gambar B..."
                                      Click="AddImageB_Click"
                                      x:Name="AddImageBMenuItem"/>
                            <MenuItem x:Name="SavePixelsMenuItem"
                                      Header="Simpan Pixel"
                                      Click="SavePixelsButton_Click"
                                      IsEnabled="False"/>
                        </MenuItem>
                    </Menu>
                    
                    <!-- Toggle Brightness -->
                    <ToggleButton x:Name="BrightnessToggle"
                                  Content="Brightness"
                                  Checked="BrightnessToggle_Checked"
                                  Unchecked="BrightnessToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Toggle Binary Threshold -->
                    <ToggleButton x:Name="BinaryThresholdToggle"
                                  Content="Binary Threshold"
                                  Checked="BinaryThresholdToggle_Checked"
                                  Unchecked="BinaryThresholdToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Grayscale Comparison -->
                    <Button x:Name="GrayscaleCompareButton"
                            Content="Grayscale Comparison"
                            Click="ShowGrayscaleComparison_Click"
                            IsEnabled="False"
                            Padding="16,6"
                            Margin="4,0,0,0"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#FF35424E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE8F0FE"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Operasi Aritmatika -->
                    <ToggleButton x:Name="ArithmeticAddToggle"
                                  Content="A + B"
                                  Checked="ArithmeticAddToggle_Checked"
                                  Unchecked="ArithmeticAddToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <ToggleButton x:Name="ArithmeticSubtractToggle"
                                  Content="A - B"
                                  Checked="ArithmeticSubtractToggle_Checked"
                                  Unchecked="ArithmeticSubtractToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <ToggleButton x:Name="ArithmeticMultiplyToggle"
                                  Content="A ร B"
                                  Checked="ArithmeticMultiplyToggle_Checked"
                                  Unchecked="ArithmeticMultiplyToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <ToggleButton x:Name="ArithmeticDivideToggle"
                                  Content="A รท B"
                                  Checked="ArithmeticDivideToggle_Checked"
                                  Unchecked="ArithmeticDivideToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="ArithmeticToggle_RightClick"/>
                    
                    <!-- Operasi Skalar -->
                    <ToggleButton x:Name="ScalarOperationToggle"
                                  Content="Operasi Skalar"
                                  Checked="ScalarOperationToggle_Checked"
                                  Unchecked="ScalarOperationToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <!-- Operasi Biner - 4 Toggle Terpisah -->
                    <ToggleButton x:Name="BinaryAndToggle"
                                  Content="AND"
                                  Checked="BinaryAndToggle_Checked"
                                  Unchecked="BinaryAndToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="BinaryToggle_RightClick"/>
                    
                    <ToggleButton x:Name="BinaryOrToggle"
                                  Content="OR"
                                  Checked="BinaryOrToggle_Checked"
                                  Unchecked="BinaryOrToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="BinaryToggle_RightClick"/>
                    
                    <ToggleButton x:Name="BinaryNotToggle"
                                  Content="NOT"
                                  Checked="BinaryNotToggle_Checked"
                                  Unchecked="BinaryNotToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"/>
                    
                    <ToggleButton x:Name="BinaryXorToggle"
                                  Content="XOR"
                                  Checked="BinaryXorToggle_Checked"
                                  Unchecked="BinaryXorToggle_Unchecked"
                                  IsEnabled="False"
                                  Margin="4,0,0,0"
                                  Style="{StaticResource ToolbarToggleStyle}"
                                  MouseRightButtonDown="BinaryToggle_RightClick"/>
                </StackPanel>
            </Border>
        </DockPanel>

        <!-- Info Panel -->
        <Border Grid.Row="1"
                Padding="12"
                BorderBrush="#FFDFE2E5"
                BorderThickness="1"
                CornerRadius="6"
                Background="#FFF8FAFC">
            <StackPanel Orientation="Vertical">
                <TextBlock Name="FileNameText"
                           Text="Belum ada gambar dipilih"
                           FontSize="14"
                           FontStyle="Italic"
                           Foreground="Gray"/>
                <TextBlock Name="ImageInfoText"
                           Text="Pilih gambar untuk melihat detail dan menyimpan data pixel."
                           FontSize="12"
                           Foreground="#FF51606A"
                           Margin="0,4,0,0"/>
                
                <!-- Brightness Slider -->
                <StackPanel x:Name="BrightnessPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Brightness Adjustment (-255 to +255)" FontSize="12" FontWeight="Bold" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="BrightnessSlider" 
                                Grid.Column="0"
                                Minimum="-255" 
                                Maximum="255" 
                                Value="0" 
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                ValueChanged="BrightnessSlider_ValueChanged"
                                Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ElementName=BrightnessSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"
                                   MinWidth="40"
                                   TextAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <!-- Binary Threshold Slider -->
                <StackPanel x:Name="BinaryThresholdPanel" Orientation="Vertical" Margin="0,12,0,0" Visibility="Collapsed">
                    <TextBlock Text="Binary Threshold (0 - 255)" FontSize="12" FontWeight="Bold" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="BinaryThresholdSlider"
                                Grid.Column="0"
                                Minimum="0"
                                Maximum="255"
                                Value="128"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                ValueChanged="BinaryThresholdSlider_ValueChanged"
                                Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ElementName=BinaryThresholdSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   MinWidth="40"
                                   TextAlignment="Right"/>
                    </Grid>
                </StackPanel>
                
                <!-- Color Selection -->
                <StackPanel x:Name="ColorSelectionPanel" Orientation="Vertical" Margin="0,8,0,0" Visibility="Collapsed">
                    <TextBlock Text="Seleksi Warna Interaktif" FontSize="12" FontWeight="Bold" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="ColorSelectionCheckBox" 
                                  Grid.Column="0"
                                  Content="Aktifkan" 
                                  VerticalAlignment="Center"
                                  Checked="ColorSelection_Checked"
                                  Unchecked="ColorSelection_Unchecked"/>
                        <TextBlock x:Name="SelectedColorText" 
                                   Grid.Column="1"
                                   Text="Klik pada gambar untuk memilih warna" 
                                   FontSize="11" 
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2"
              Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Main Display Area -->
            <Border x:Name="DisplayImageBorder"
                    Grid.Column="0"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Padding="12"
                    SnapsToDevicePixels="True">
                <ScrollViewer x:Name="WorkspaceScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              Focusable="True"
                              PreviewMouseWheel="WorkspaceScrollViewer_PreviewMouseWheel">
                    <Grid Background="Transparent">
                        <Image Name="DisplayImage"
                               Stretch="None"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               IsManipulationEnabled="True"
                               ManipulationStarting="DisplayImage_ManipulationStarting"
                               ManipulationDelta="DisplayImage_ManipulationDelta">
                            <Image.LayoutTransform>
                                <ScaleTransform x:Name="ImageScaleTransform"
                                                ScaleX="1"
                                                ScaleY="1"/>
                            </Image.LayoutTransform>
                        </Image>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,12"
                    Background="#F9FBFD"
                    BorderBrush="#FFD0D7DF"
                    BorderThickness="1"
                    CornerRadius="12"
                    Panel.ZIndex="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="0"
                                      Color="#1A000000"
                                      Opacity="0.8"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Filter Previews -->
                    <ItemsControl x:Name="FilterPreviewList" Padding="12,10,12,6">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8"
                                        BorderThickness="2"
                                        Padding="2"
                                        Margin="4,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush"
                                                    Value="Transparent"/>
                                            <Setter Property="Background"
                                                    Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}"
                                                             Value="True">
                                                    <Setter Property="BorderBrush"
                                                            Value="#FF4C8BF5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Button Click="FilterPreview_Click"
                                            CommandParameter="{Binding Mode}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="8,6"
                                            Cursor="Hand">
                                        <StackPanel Width="110">
                                            <Image Source="{Binding PreviewSource}"
                                                   Width="110"
                                                   Height="72"
                                                   Stretch="UniformToFill"
                                                   SnapsToDevicePixels="True"
                                                   Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="12"
                                                       Foreground="#FF35424E"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Negasi Toggle Button -->
                    <Border BorderBrush="#FFDFE2E5" 
                            BorderThickness="0,1,0,0" 
                            Padding="12,8,12,10"
                            Background="Transparent">
                        <ToggleButton x:Name="NegationToggle"
                                      Content="Negasi Citra"
                                      Checked="NegationToggle_Checked"
                                      Unchecked="NegationToggle_Unchecked"
                                      IsEnabled="False"
                                      Padding="16,8"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Background" Value="#FFF8FAFC"/>
                                    <Setter Property="Foreground" Value="#FF35424E"/>
                                    <Setter Property="BorderBrush" Value="#FFDFE2E5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="#FF4C8BF5"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#FF4C8BF5"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE8F0FE"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsChecked" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#FF3A7BE0"/>
                                        </MultiTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Sidebar Kanan - Gambar B dan Histogram -->
            <Border x:Name="SidebarPanel"
                    Grid.Column="1"
                    BorderBrush="#FFDFE2E5"
                    BorderThickness="1"
                    CornerRadius="8"
                    Background="White"
                    Margin="12,0,0,0"
                    Padding="16"
                    Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Preview Gambar B -->
                        <Border x:Name="ImageBPreviewBorder"
                                BorderBrush="#FFDFE2E5"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="8"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Gambar B"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Margin="0,0,0,8"/>
                                <Image x:Name="ImageBPreview"
                                       MaxHeight="150"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ImageBInfoText"
                                           Text=""
                                           FontSize="10"
                                           Foreground="#FF51606A"
                                           TextAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="Histogram"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Red -->
                        <TextBlock Text="Red" FontSize="11" Foreground="#E74C3C" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramRed" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,16"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramRed_Click"/>
                        
                        <!-- Green -->
                        <TextBlock Text="Green" FontSize="11" Foreground="#27AE60" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramGreen" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,16"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramGreen_Click"/>
                        
                        <!-- Blue -->
                        <TextBlock Text="Blue" FontSize="11" Foreground="#3498DB" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramBlue" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,16"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramBlue_Click"/>
                        
                        <!-- Grayscale -->
                        <TextBlock Text="Grayscale" FontSize="11" Foreground="#95A5A6" Margin="0,0,0,4"/>
                        <Canvas x:Name="HistogramGray" 
                                Height="80" 
                                Background="#FFF5F5F5" 
                                Margin="0,0,0,0"
                                Cursor="Hand"
                                MouseLeftButtonDown="HistogramGray_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
